{
  "name": "micro",
  "version": "10.0.0",
  "description": "Asynchronous HTTP microservices",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p .",
    "test": "NODE_ENV=test jest",
    "lint": "eslint . --ext .ts,.js",
    "lint-staged": "git diff --diff-filter=ACMRT --cached --name-only '*.ts' '*.js' | xargs ./node_modules/.bin/eslint",
    "prepublishOnly": "yarn && yarn run lint && yarn run test && yarn run build"
  },
  "bin": {
    "micro": "./lib/cli.js"
  },
  "repository": "zeit/micro",
  "keywords": [
    "micro",
    "service",
    "microservice",
    "serverless",
    "API"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/content-type": "1.1.3",
    "@types/is-stream": "^1.1.0",
    "@types/node": "11.9.5",
    "@types/request-promise": "^4.1.42",
    "@types/test-listen": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "1.4.1",
    "@typescript-eslint/parser": "1.4.1",
    "@zeit/eslint-config-node": "0.3.0",
    "eslint": "5.14.1",
    "husky": "1.3.1",
    "jest": "24",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "resumer": "0.0.0",
    "test-listen": "^1.1.0",
    "ts-jest": "24",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "@types/jest": "24.0.6",
    "arg": "^4.1.0",
    "chalk": "^2.4.2",
    "content-type": "1.0.4",
    "is-stream": "1.1.0",
    "raw-body": "^2.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "__tests__/.*_[^/]+\\.ts"
    ],
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run lint-staged"
    }
  }
}
