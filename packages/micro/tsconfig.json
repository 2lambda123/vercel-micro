{
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "removeComments": true
  },
  "include": ["src"]
}
